<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RemoteControlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:onClick="goBack"
            android:text="@string/ic_back"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_control_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_edit_computer"
            style="@style/titlebox"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/greyLine"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/topView"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_shutdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:background="@drawable/btn_small"
                android:text="关机"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"/>
            <Button
                android:id="@+id/btn_close_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:background="@drawable/btn_small"
                android:layout_marginLeft="20dp"
                android:text="关闭窗口"
                android:layout_toRightOf="@+id/btn_shutdown"
                />
            <Button
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_more"
                android:background="@drawable/btn_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showMoreWindow"
                android:text="更多"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/topView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_msg"
                android:layout_width="265dp"
                android:layout_height="48dp"
                android:background="@drawable/edit_my"
                android:ems="10"
                android:paddingLeft="5dp"
                android:hint="文本输入"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text="" />
            <Button
                android:id="@+id/btn_send_msg"
                android:layout_width="wrap_content"
                android:background="@drawable/btn_small"
                android:layout_height="wrap_content"
                android:text="发送"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ctl_mouse"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <net.yiliufeng.windows_control.myView.ControllerView
                android:id="@+id/ctl_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_below="@+id/ctl_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_mouse_left_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_small"
                    android:onClick="doClick"
                    android:text="左键点击"/>
                <Button
                    android:id="@+id/btn_mouse_right_click"
                    android:background="@drawable/btn_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="右键点击"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/ctl_mouse"
            android:layout_alignTop="@+id/ctl_mouse"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_backspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:background="@drawable/btn_small"
                android:text="退格"
                android:layout_toRightOf="@+id/btn_shutdown"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_browser"
                    android:layout_width="wrap_content"
                    android:background="@drawable/btn_small"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="浏览器" />

                <Button
                    android:id="@+id/btn_music"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_small"
                    android:layout_height="wrap_content"
                    android:onClick="showMusicWindow"
                    android:text="音乐" />
                <Button
                    android:id="@+id/btn_be_pending"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_small"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="待定" />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_volume_up"
                    android:layout_width="wrap_content"
                    android:background="@drawable/btn_small"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="30dp"
                    android:onClick="doClick"
                    android:text="音量+" />

                <Button
                    android:id="@+id/btn_volume_down"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_small"
                    android:onClick="doClick"
                    android:text="音量-" />
                <Button
                    android:id="@+id/btn_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_small"
                    android:layout_marginBottom="20dp"
                    android:onClick="doClick"
                    android:text="静音" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>